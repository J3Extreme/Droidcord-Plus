<resources>

    <!-- Base Holo Dark theme -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo">
        <!-- Okno główne -->
        <item name="android:windowBackground">@android:color/background_dark</item>
        <!-- Główny kolor tekstu -->
        <item name="android:textColorPrimary">@android:color/primary_text_dark</item>
        <!-- Kolor tekstu podrzędnego -->
        <item name="android:textColorSecondary">@android:color/secondary_text_dark</item>
        <!-- Standardowe tło dla EditText -->
        <item name="android:editTextBackground">?android:attr/editTextBackground</item>
        <!-- Kolor przycisków -->
        <item name="android:buttonStyle">@android:style/Widget.Holo.Button</item>
    </style>

    <!-- Holo Dark bez ActionBar -->
    <style name="AppBaseTheme.NoActionBar" parent="@android:style/Theme.Holo.NoActionBar" />

    <!-- Twoje motywy aplikacji -->
    <style name="AppTheme" parent="AppBaseTheme" />
    <style name="AppTheme.NoActionBar" parent="AppBaseTheme.NoActionBar" />

</resources>
